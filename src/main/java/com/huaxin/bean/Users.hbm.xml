<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.huaxin.bean.Users" table="users" catalog="spring_security">
        <id name="id" type="java.lang.Integer">
            <column name="id" />
            <generator class="identity" />
        </id>
        <property name="enable" type="java.lang.Integer">
            <column name="enable" />
        </property>
        <property name="password" type="java.lang.String">
            <column name="password" />
        </property>
        <property name="account" type="java.lang.String">
            <column name="account" />
        </property>
        <set cascade="all" name="roles" table="users_roles">   
            <key column="uid" />   
            <many-to-many class="com.huaxin.bean.Roles"  column="rid" />
        </set>   


    </class>
</hibernate-mapping>
